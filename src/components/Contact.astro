---
import { Image } from "astro:assets";
import alquipop from "@/images/alquipop-logo.svg";
import linkedin from "@/images/icon-linkedin.png";
import instagram from "@/images/icon-instagram.png";
---

<div class="flex flex-col items-center justify-center h-full">
	<div class="flex flex-col md:grid grid-cols-2 h-3/4 p-4 w-4/5 relative">
		<div class="absolute -bottom-10 w-full md:flex justify-center hidden">
			<Image
				src={alquipop}
				alt="Alquipop logo"
				class="w-28"
				loading="eager"
			/>
		</div>
		<div
			class="bg-white p-12 md:text-2xl flex flex-col justify-between gap-4"
		>
			<div class="flex flex-col md:gap-8 w-3/4">
				<div class="font-bold">Dirección:</div>
				<div class="underline">
					C. Lago Zurich 245, Col-Piso 7, Amp Granada, Miguel Hidalgo,
					11529 Ciudad de México, CDMX, México.
				</div>
				<div class="font-bold">Teléfono:</div>
				<div>+52 55 1253 7000</div>
			</div>
			<div class="flex gap-5">
				<a href="" class="z-10">
					<Image
						src={linkedin}
						alt="linkedin"
						class="w-14"
						loading="eager"
					/>
				</a>
				<a href="" class="z-10">
					<Image
						src={instagram}
						alt="instagram"
						class="w-14"
						loading="eager"
					/>
				</a>
			</div>
		</div>
		<div class="p-12 md:text-2xl flex flex-col gap-8">
			<div class="font-bold">Contáctanos:</div>
			<form action="" method="post" class="flex-col hidden">
				<input type="text" name="name" id="name" placeholder="Nombre" />
				<input
					type="email"
					name="email"
					id="email"
					placeholder="Correo"
				/>
				<input
					type="text"
					name="phone"
					id="phone"
					placeholder="Teléfono"
				/>
				<textarea
					name="message"
					id="message"
					cols="30"
					rows="10"
					placeholder="Mensaje"></textarea>
				<button type="submit">Enviar</button>
			</form>
		</div>
	</div>
</div>
